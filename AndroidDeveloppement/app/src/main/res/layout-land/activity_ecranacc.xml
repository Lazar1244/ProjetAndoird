<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/InitGray"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Gray Display"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/InitBlack"
        />

    <Button
        android:id="@+id/InitBlack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Black Display"
        app:layout_constraintBottom_toTopOf="@+id/InitGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/InitRed"
        />

    <Button
        android:id="@+id/InitRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Red Display"
        app:layout_constraintBottom_toTopOf="@+id/InitBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintVertical_bias="1.0"
        android:backgroundTint="@color/red"


        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.55"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Display Color"
        app:layout_constraintBottom_toTopOf="@+id/InitRed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/Autheur" />

    <TextView
        android:id="@+id/Autheur"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Stevanovic Lazar"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="Lampe Magique"
        app:layout_constraintBottom_toTopOf="@id/Autheur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>